<?xml version="1.0" encoding="UTF-8"?>
<client>
	<commands>
		<command name="blob.container.list" method="GET">
			<doc>The List Containers operation returns a list of the containers under the specified account.</doc>

			<param name="comp" type="string" required="true" location="query" static="list"/>

			<param name="prefix" type="string" required="false" location="query" />
			<param name="marker" type="integer" required="false" location="query" />
			<param name="maxresults" type="integer" required="false" location="query" />
			<param name="include" type="string" required="false" location="query" static="metadata" />
			<param name="timeout" type="integer" required="false" location="query" />
		</command>
		<command name="blob.container.create" method="PUT" uri="{container}">
			<doc>The Create Container operation creates a new container under the specified account.</doc>

			<param name="container" type="regex:/^[a-z]+$/" required="true" />
			<param name="restype" type="string" required="true" location="query" static="container"/>

			<param name="public_access" type="enum:container,blob" location="header:x-ms-blob-public-access" />

			<param name="timeout" type="integer" required="false" location="query" />
		</command>
                <command name="blob.container.delete" method="DELETE" uri="{container}">
                        <doc>The Delete Container operation marks the specified container for deletion.</doc>

                        <param name="container" type="regex:/^[a-z]+$/" required="true" />
			<param name="restype" type="string" required="true" location="query" static="container"/>

                        <param name="timeout" type="integer" required="false" location="query" />
                </command>
	</commands>
</client>
