{
  "operations": {
    "certificates.list": {
      "httpMethod": "GET",
      "uri": "certificates",
      "description": "Lists and returns basic information about all of the management certificates associated with the specified subscription.",
      "responseModel": "CertificateList"
    },
    "certificates.add": {
      "httpMethod": "POST",
      "uri": "certificates",
      "description": "The Add Management Certificate operation adds a management certificate to the specified subscription.",
      "responseModel": "OperationResponse",
      "data": {
        "xmlEncoding": "utf-8",
        "xmlRoot": {
          "name": "SubscriptionCertificate",
          "namespaces": [
            "http://schemas.microsoft.com/windowsazure"
          ]
        }
      },
      "parameters": {
        "SubscriptionCertificatePublicKey": {
          "type": "string",
          "location": "xml",
          "required": true
        },
        "SubscriptionCertificateThumbprint": {
          "type": "string",
          "location": "xml",
          "required": true
        },
        "SubscriptionCertificateData": {
          "type": "string",
          "location": "xml",
          "required": true
        }
      }
    },
    "certificates.get": {
      "httpMethod": "GET",
      "uri": "certificates/{thumbprint}",
      "description": "Gets information about the management certificate with the specified thumbprint.",
      "responseModel": "Certificate",
      "parameters": {
        "thumbprint": {
          "type": "string",
          "location": "uri",
          "required": true
        }
      }
    },
    "certificates.delete": {
      "httpMethod": "DELETE",
      "uri": "certificates/{thumbprint}",
      "description": "Deletes a certificate from the list of management certificates.",
      "responseModel": "OperationResponse",
      "parameters": {
        "thumbprint": {
          "type": "string",
          "location": "uri",
          "required": true
        }
      }
    }
  },
  "models": {
    "CertificateList": {
      "type": "array",
      "name": "certificates",
      "sentAs": "SubscriptionCertificate",
      "location": "xml",
      "items": {
        "$ref": "Certificate"
      }
    },
    "Certificate": {
      "type": "object",
      "additionalProperties": {
        "location": "xml"
      }
    },
    "OperationResponse": {
      "type": "object",
      "properties": {
        "ID": {
          "location": "header",
          "sentAs": "x-ms-request-id",
          "type": "string"
        },
        "HttpStatusCode": {
          "location": "statusCode",
          "type": "integer"
        },
        "Status": {
          "location": "reasonPhrase",
          "type": "string"
        }
      }
    }
  }
}
